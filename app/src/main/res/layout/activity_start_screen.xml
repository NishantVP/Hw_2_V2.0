<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartScreenActivity"
    android:clickable="false"
    android:backgroundTint="#ffffffff"
    >


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/EnterZooButton"
        android:id="@+id/enterZooButton"
        android:onClick="enterZoo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/zooImageView"
        android:layout_alignEnd="@+id/zooImageView" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/EnterZooInfoButton"
        android:id="@+id/enterZooInfoButton"
        android:onClick="enterZooInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zooImageView"
        android:layout_above="@+id/enterZooInfoButton"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/ZooStartImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/zooTitle"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/zooImageView"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textColor="#ffffa00c" />

</RelativeLayout>
